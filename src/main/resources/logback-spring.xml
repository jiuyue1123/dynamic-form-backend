<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="60 seconds" debug="false">
    <!-- 1. 全局变量定义（环境、日志路径、格式） -->
    <springProperty scope="context" name="spring.profiles.active" source="spring.profiles.active" defaultValue="dev"/>
    <springProperty
            scope="context"
            name="APP_NAME"
    source="spring.application.name"
    defaultValue="my-app"
    />
    <property
            name="LOG_PATH"
            value="${LOG_HOME:-./logs}/${APP_NAME}"
    />
    <!-- 日志格式：包含 traceId，去掉颜色占位符（颜色通过 ConsoleAppender 控制） -->
    <property name="CONSOLE_LOG_PATTERN" value="%magenta(%d{yyyy-MM-dd HH:mm:ss.SSS}) %highlight(%-5level) %blue([%thread]) %green([%X{traceId:-N/A}]) %cyan(%logger{50}) - %msg%n"/>
    <property name="FILE_LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] [%X{traceId:-N/A}] %logger{50} - %msg%n"/>

    <!-- 2. 控制台输出 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>${CONSOLE_LOG_LEVEL:-DEBUG}</level>
        </filter>
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- 3. 文件输出（修复 SizeAndTimeBasedFNATP 废弃警告） -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/app.log</file>
        <!-- 新版推荐：直接使用 SizeAndTimeBasedRollingPolicy（无需嵌套 FNATP） -->
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/app-%d{yyyy-MM-dd}-%i.log</fileNamePattern>
            <!-- 单个文件最大100MB -->
            <maxFileSize>100MB</maxFileSize>
            <!-- 日志保留7天 -->
            <maxHistory>7</maxHistory>
            <!-- 总日志体积上限1GB -->
            <totalSizeCap>1GB</totalSizeCap>
            <!-- 启动时清理旧日志 -->
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>${FILE_LOG_LEVEL:-${spring.profiles.active.equals('prod') ? 'WARN' : 'DEBUG'}}</level>
        </filter>
    </appender>

    <!-- 4. 错误日志单独输出 -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/error.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/error-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
    </appender>

    <!-- 5. 日志级别配置 -->
    <root level="${ROOT_LOG_LEVEL:-${spring.profiles.active.equals('prod') ? 'WARN' : 'DEBUG'}}">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="ERROR_FILE"/>
    </root>

    <!-- 业务包级别 -->
    <logger name="org.example" level="${spring.profiles.active.equals('prod') ? 'INFO' : 'DEBUG'}" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="ERROR_FILE"/>
    </logger>

    <!-- 框架包日志级别 -->
    <logger name="org.springframework" level="INFO"/>
    <logger name="com.alibaba.druid" level="WARN"/>
    <logger name="mysql" level="WARN"/>
</configuration>